{
  "name": "hit-bet",
  "version": "1.0.1",
  "description": "",
  "license": "ISC",
  "author": "HIT Dev",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo \"Aucun build spécifique requis : les assets statiques sont déjà prêts\"",
    "vercel-build": "npm run build",
    "deploy:vercel": "vercel deploy --prod --yes",
    "deploy:netlify": "netlify deploy --prod --dir=static --functions=netlify/functions"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "fs": "^0.0.1-security",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "netlify-cli": "^17.22.0",
    "vercel": "^33.2.0"
  },
  "netlify": {
    "build": {
      "command": "npm run build",
      "publish": "static",
      "functions": "netlify/functions"
    },
    "dev": {
      "command": "npm run dev",
      "targetPort": 8080,
      "port": 8888,
      "framework": "#static"
    }
  },
  "vercel": {
    "buildCommand": "npm run vercel-build",
    "installCommand": "npm install",
    "devCommand": "npm run dev",
    "outputDirectory": "static",
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/$1"
      }
    ]
  }
}
