{
  "name": "hit-bet",
  "version": "1.0.1",
  "description": "",
  "license": "ISC",
  "author": "HIT Dev",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo \"Aucun build spécifique requis : les assets statiques sont déjà prêts\"",
    "pm2:start": "npx pm2 start ecosystem.config.cjs",
    "pm2:stop": "npx pm2 stop all",
    "pm2:restart": "npx pm2 restart all",
    "pm2:logs": "npx pm2 logs",
    "pm2:monit": "npx pm2 monit",
    "pm2:delete": "npx pm2 delete all",
    "pm2:save": "npx pm2 save",
    "pm2:resurrect": "npx pm2 resurrect"
  },
  "engines": {
    "node": "18.x",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "fs": "^0.0.1-security",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.11",
    "pg": "^8.16.3",
    "redis": "^4.6.12",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "netlify-cli": "^17.22.0",
    "pm2": "^5.4.3",
    "vercel": "^33.2.0"
  },
  "netlify": {
    "build": {
      "command": "npm run build",
      "publish": "static",
      "functions": "netlify/functions"
    },
    "dev": {
      "command": "npm run dev",
      "targetPort": 8080,
      "port": 8888,
      "framework": "#static"
    }
  },
  "vercel": {
    "buildCommand": "npm run vercel-build",
    "installCommand": "npm install",
    "devCommand": "npm run dev",
    "outputDirectory": "static",
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/$1"
      }
    ]
  }
}
