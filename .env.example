# ===================================
# DATABASE CONFIGURATION
# ===================================
DATABASE_URL=postgres://user:password@localhost:5432/horse_racing
SSL_CERTIFICATE=./ca.pem

# ===================================
# SERVER CONFIGURATION
# ===================================
PORT=3000
NODE_ENV=development
HOST=localhost

# ===================================
# WEBSOCKET CONFIGURATION
# ===================================
WEBSOCKET_PORT=8080
WEBSOCKET_HOST=localhost

# ===================================
# GAME CONFIGURATION
# ===================================
ROUND_DURATION_MS=60000
RACE_DURATION_MS=25000
RACE_SETUP_DELAY=10000

# ===================================
# CURRENCY & DISPLAY
# ===================================
CURRENCY=HTG
CURRENCY_SYMBOL=HTG
VISIBLE_DIGITS=2

# ===================================
# SECURITY
# ===================================
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===================================
# FEATURES
# ===================================
ENABLE_PRINTJS=true
ENABLE_WEBSOCKET=true
ENABLE_DATABASE=true
